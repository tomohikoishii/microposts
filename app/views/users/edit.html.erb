<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <div class="form-group">
        <%= f.label :email, :class => "col-sm-1 control-label" %>
        <%= f.text_field :email, :class => "col-sm-5 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :profile, :class => "col-sm-1 control-label" %>
        <%= f.text_area :profile, :class => "col-sm-5 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :area, :class => "col-sm-1 control-label" %>
        <%= f.text_field :area, :class => "col-sm-5 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :url, :class => "col-sm-1 control-label" %>
        <%= f.text_field :url, :class => "col-sm-5 form-control" %>
      </div>


      <div class="form-group">
        <div>
        <%= f.submit "Update", class: "col-sm-5 btn btn-large btn-primary" %>
        </div>
      </div>  
    <% end %>
  </div>
</div>