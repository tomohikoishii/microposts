<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :name, :class => "col-sm-1 control-label" %>
        <%= f.text_field :name, :class => "col-sm-5 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, :class => "col-sm-1 control-label" %>
        <%= f.text_field :email, :class => "col-sm-5 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, :class => "col-sm-1 control-label" %>
        <%= f.password_field :password, :class => "col-sm-5 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, :class => "col-sm-4 control-label" %>
        <%= f.password_field :password_confirmation, :class => "col-sm-5 form-control" %>
      </div>

      <div class="form-group">
        <div>
        <%= f.submit "Create my account", class: "col-sm-5 btn btn-large btn-primary" %>
        </div>
      </div>  
    <% end %>
  </div>
</div>