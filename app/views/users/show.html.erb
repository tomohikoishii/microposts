<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
<div class="container">
  <div class="row">
    <div class="content col-sm-4 col-sm-offset-4">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>項目</th>
            <th>内容</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>email</th>
            <td><%= @user.email %></td>
          </tr>
        
          <tr>
            <th>area</th>
            <% if @user.area %>
              <td><%= @user.area %></td>
            <% else %>
              <td>(未設定)</td>
            <% end %>
          </tr>
        
          <tr>
            <th>profile</th>
            <% if @user.profile %>
              <td><%= @user.profile %></td>
            <% else %>
              <td>(未設定)</td>
            <% end %>
            </tr>
        
          <tr>
            <th>url</th>
            <% if @user.url %>
              <td><%= @user.url %></td>
            <% else %>
              <td>(未設定)</td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
